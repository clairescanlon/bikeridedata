import pandas as pd
import glob

# Define the directory path. Personal file path details have been hidden here. 
dir_path = 'your_directory_path_here'

# Get a list of all CSV files in the specified directory
csv_files = glob.glob(dir_path + '/*.csv')

# Read each CSV file into a DataFrame and concatenate them into a single DataFrame
combined_df = pd.concat([pd.read_csv(file) for file in csv_files])

# Define the output file path. Personal file path details have been hidden here. 
output_file_path = 'your_output_file_path_here'

# Save the combined DataFrame to a new CSV file
combined_df.to_csv(output_file_path, index=False)

